<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <IncludeCompositeObjects>False</IncludeCompositeObjects>
    <TargetDatabaseName>#{Cockpit.Database.Name}</TargetDatabaseName>
    <DeployScriptFileName>OperationsCockpit_Compass.sql</DeployScriptFileName>
    <TargetConnectionString>Data Source=#{DatabaseServer.Name};#{unless DatabaseServer.User.Name}Integrated Security=True#{/unless} #{if DatabaseServer.User.Name}User ID=#{DatabaseServer.User.Name}; Password=#{DatabaseServer.User.Password}#{/if};</TargetConnectionString>
    <BlockOnPossibleDataLoss>True</BlockOnPossibleDataLoss>
    <ProfileVersionNumber>1</ProfileVersionNumber>
    <GenerateSmartDefaults>True</GenerateSmartDefaults>
  </PropertyGroup>
  <ItemGroup>
    <SqlCmdVariable Include="Data">
      <Value>#{Include.Data}</Value>
    </SqlCmdVariable>
  </ItemGroup>
</Project>